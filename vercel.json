{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "public/**",
          "uploads/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(img|styles|js|uploads)/(.*)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/favicon.png",
      "dest": "/public/img/favicon.png"
    },
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ]
}
